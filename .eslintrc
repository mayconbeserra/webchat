{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": [
    "babel",
    "mocha",
    "react"
  ],
  "rules": {
    "max-len": 0,
    "no-use-before-define": 0,
    "react/jsx-curly-spacing": [2, "always"],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "always"}],
    "func-names": 0,
    "id-length": [1, {"exceptions": ["i", "j", "e", "a", "b"]}],
    "arrow-body-style": 0,
    "react/jsx-uses-vars": [2],
    "react/jsx-uses-react": 2,
  }
}
